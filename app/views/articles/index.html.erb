<h1>This page lists all articles.</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th colspan="3">Actions</th>
      
    </tr>
  </thead>
  <tbody>
  <% @articles.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.description %></td>
      <td><%= item.author %></td>
      <td><%= link_to 'Show', article_path(item) %></td>
      <td><%= link_to 'Edit', edit_article_path(item) %></td>
      <td><%= link_to 'Delete', article_path(item), method: :delete, data: {confirm: "Are You Sure?"} %></td>
      
    </tr>
  <% end %>
  </tbody>
</table>
<p><td><%= link_to 'Create new article', new_article_path %></p>